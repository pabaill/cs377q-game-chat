{
  "manifest_version": 3,
  "name": "CS377Q Chat Summarizer",
  "version": "1.0",
  "description": "Reads an online chat from a page and summarizes it.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://colonist.io/*"
  ],
  "action": {
    "default_icon": "chat-icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://colonist.io/*"],
      "js": ["scripts/content.js"]
    }
  ]
}